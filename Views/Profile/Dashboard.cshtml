@{
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<h2 class="text-center my-4">Hoş Geldiniz, @User.Identity.Name!</h2>

<div class="row justify-content-center mt-5">
    <!-- Dosya Yükleme Kartı -->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Dosya Yükleme</h5>
                <p class="card-text">Yeni bir dosya yükleyerek analiz edin ve sonucunu görüntüleyin.</p>
                <a href="/File/Upload" class="btn btn-primary">Dosya Yükle</a>
            </div>
        </div>
    </div>
    <!-- Eskiden Yüklediğim Dosyalar Kartı -->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Eskiden Yüklediğim Dosyalar</h5>
                <p class="card-text">Daha önce yüklediğiniz dosyaların sonuçlarını görüntüleyin.</p>
                <a href="/File/ResultsHistory" class="btn btn-primary">Dosyalarımı Gör</a>
            </div>
        </div>
    </div>
    <!-- Yeni Kart: Dosya Ara -->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h5 class="card-title">Dosya Ara</h5>
                <p class="card-text">Dosya ismi girerek arama yapabilirsiniz.</p>
                <form method="get" action="/File/SearchByName">
                    <input type="text" name="fileName" placeholder="Dosya Adı" class="form-control mb-2" required />
                    <button type="submit" class="btn btn-info">Ara</button>
                </form>
            </div>
        </div>
    </div>
</div>
